{
  "name": "react-mobx-local-model",
  "version": "0.0.1",
  "description": "Helper to create local models for React components with MobX",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest src/*.test.tsx",
    "release": "standard-version --no-verify; git push --follow-tags origin master; npm publish"
  },
  "keywords": [
    "react",
    "mobx"
  ],
  "author": "Alexey Efremov <lexich121@gmail.com>",
  "bugs": {
    "url": "https://github.com/lexich/react-mobx-local-model/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react-dom": "^19.0.3",
    "jsdom": "^26.0.0",
    "standard-version": "^9.5.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "mobx": "^6.13.5",
    "mobx-react-lite": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
